<%- include('auth-template', {
  pageTitle: 'Forgot Password',
  cardWidth: '420px',
  pageContent: `
    <link rel="stylesheet" href="https://css.tracklead.com/forgot-password.css">
    <div id="forgot-password-form-container">
      <h2 class="text-center mb-4">Forgot Password</h2>
      <p class="text-center text-muted mb-4">Enter your email address and we'll send you instructions to reset your password.</p>
      <form id="forgot-password-form">
        <div class="mb-4 auth-input-group">
          <label for="email" class="form-label">Email Address</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            <input type="email" class="form-control" id="email" name="email" required autocomplete="email" />
          </div>
        </div>
        <button type="submit" class="btn btn-primary auth-btn w-100" id="recover-button">
          <i class="fas fa-key me-2"></i> Recover Password
        </button>
      </form>
    </div>
    <div id="forgot-password-success" style="display: none;">
      <div class="text-center mb-4">
        <i class="fas fa-envelope-open-text text-primary" style="font-size: 3rem;"></i>
      </div>
      <h2 class="text-center mb-3">Check Your Email</h2>
      <p class="text-center mb-4">
        If an account exists with this email address, we've sent password reset instructions to it.<br><br>
        Please check your inbox and follow the link to reset your password.
      </p>
    </div>
    <div class="auth-footer">
      <a href="/login" class="text-primary">
        <i class="fas fa-arrow-left me-2"></i> Back to Login
      </a>
    </div>
    <script src="https://js.tracklead.com/login.js"></script>
  `,
  error: typeof error !== 'undefined' ? error : null
}) %>
