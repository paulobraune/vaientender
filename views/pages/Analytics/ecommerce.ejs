<%
  const bodyContent = `
<link rel="stylesheet" href="/css/analytics/analytics.css">
<link rel="stylesheet" href="/css/analytics/ecommerce.css">

<div class="page-title-wrapper mb-4">
  <h1 class="page-title">E-commerce Analytics</h1>
  <p class="page-subtitle">Track your online store performance and optimize your conversion funnel</p>
</div>

<div class="analytics-filter-bar">
  <div class="analytics-filter-group">
    <div class="date-picker-wrapper">
      <div class="date-picker" id="dateRangePicker">
        <i class="fas fa-calendar-alt"></i>
        <span class="date-range-text">Last 30 Days</span>
        <i class="fas fa-chevron-down ms-2"></i>
      </div>
    </div>
  </div>

  <div class="analytics-pill-filter" id="granularityFilter">
    <button class="active" data-granularity="day">Daily</button>
    <button data-granularity="week">Weekly</button>
    <button data-granularity="month">Monthly</button>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="chart-card mb-4">
      <div class="card-header">
        <h5 class="card-title">E-commerce Performance Trend</h5>
        <div class="analytics-pill-filter ms-auto" id="ecommerceMetricFilter">
          <button data-metric="revenue">Revenue</button>
          <button data-metric="orders">Orders</button>
          <button data-metric="avgOrderValue">Avg Order Value</button>
          <button data-metric="conversionRate">Conversion Rate</button>
        </div>
      </div>
      <div class="card-body">
        <div class="metrics-row simple mb-3">
          <div class="metric-card">
            <h3 id="summaryTotalRevenue">--</h3>
            <div class="metric-subtitle">Total Revenue</div>
            <div class="metric-trend neutral small">
              <i id="summaryTotalRevenueTrendIcon" class="fas fa-minus"></i>
              <span id="summaryTotalRevenueTrendText">vs prev period</span>
            </div>
          </div>
          <div class="metric-card">
            <h3 id="summaryTotalOrders">--</h3>
            <div class="metric-subtitle">Total Orders</div>
            <div class="metric-trend neutral small">
              <i id="summaryTotalOrdersTrendIcon" class="fas fa-minus"></i>
              <span id="summaryTotalOrdersTrendText">vs prev period</span>
            </div>
          </div>
          <div class="metric-card">
            <h3 id="summaryAvgOrderValue">--</h3>
            <div class="metric-subtitle">Avg. Order Value</div>
            <div class="metric-trend neutral small">
              <i id="summaryAvgOrderValueTrendIcon" class="fas fa-minus"></i>
              <span id="summaryAvgOrderValueTrendText">vs prev period</span>
            </div>
          </div>
          <div class="metric-card">
            <h3 id="summaryAvgConversionRate">--</h3>
            <div class="metric-subtitle">Conversion Rate</div>
            <div class="metric-trend neutral small">
              <i id="summaryAvgConversionRateTrendIcon" class="fas fa-minus"></i>
              <span id="summaryAvgConversionRateTrendText">vs prev period</span>
            </div>
          </div>
        </div>
        <div class="chart-container">
          <div id="ecommercePerformanceChart"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="chart-card mb-4">
  <div class="card-header">
    <h5 class="card-title">Product Performance</h5>
  </div>
  <div class="card-body">
    <div class="list-container" id="productPerformanceTableContainer">
      <div class="chart-loader" style="display: none;">
        <div class="spinner-border spinner-border-sm text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
      <div class="chart-empty-state" style="display: none;">
        <i class="fas fa-box-open"></i><p>No product performance data available</p>
      </div>
      <div class="table-responsive">
        <table class="table table-sm table-hover" id="productPerformanceTable">
          <thead>
            <tr>
              <th>Product</th>
              <th class="text-end">Views</th>
              <th class="text-end">Adds to Cart</th>
              <th class="text-end">Qty Sold</th>
              <th class="text-end">CR (%)</th>
              <th class="text-end">Revenue</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script src="/js/analytics/analytics-service.js"></script>
<script src="/js/analytics/chart-utils.js"></script>
<script src="/js/analytics/date-range-picker.js"></script>
<script src="/js/analytics/ecommerce.js"></script>
`; 
%>

<%- include('../../dashboard-layout', {
  pageTitle: 'Ecommerce Analytics',
  body: bodyContent
}) %>