<div class="global-alert" id="globalAlert" role="alert" aria-live="assertive">
  <button type="button" class="global-alert-close" id="globalAlertClose" aria-label="Close">&times;</button>
  <div class="global-alert-content">
    <i id="globalAlertIcon" class="fas global-alert-icon"></i>
    <div id="globalAlertMessage"></div>
  </div>
  <div class="global-alert-timebar">
    <div class="global-alert-timebar-progress" id="globalAlertTimebarProgress"></div>
  </div>
</div>